{
  "extends": [
    "tslint:latest",
    "tslint-config-google",
    "tslint-plugin-prettier"
  ],
  "linterOptions": {
    "exclude": ["public", "public/**/*.js"]
  },
  "rules": {
    "prettier": [
      true,
      {
        "semi": true,
        "singleQuote": true,
        "printWidth": 120,
        "trailingComma": "all"
      }
    ],
    "no-console": true,
    "no-bitwise": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-leading-underscore"
    ],
    "import-name": false,
    "ordered-imports": false,
    "interface-name": false,
    "no-empty-interface": false,
    "object-literal-sort-keys": false,
    "object-literal-shorthand": false
  },
  "jsRules": {}
}
